[user]
  name = James Ottaway
  email = git@james.ottaway.io
[color]
  ui = true
[github]
  user = jamesottaway
[help]
  autocorrect = 1
[core]
  editor = subl -w
  pager =
  autocrlf = input
  excludesfile = ~/.gitignore
[apply]
  whitespace = warn
[push]
  default = current
[pager]
  diff = diff-highlight
[alias]
  a = add
  aa = add --all
  ai = add --interactive
  amend = commit --amend
  ap = add --patch
  b = branch
  c = commit
  cm = commit --message
  cl = clone
  co = checkout
  conf = config
  cp = cherry-pick
  d = diff
  dc = diff --cached
  discard = checkout --
  fixup = commit --fixup
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset' --abbrev-commit
  l1 = !git l -n 1
  l2 = !git l -n 2
  l3 = !git l -n 3
  l4 = !git l -n 4
  l5 = !git l -n 5
  l10 = !git l -n 10
  l15 = !git l -n 15
  l20 = !git l -n 20
  l25 = !git l -n 25
  latest = log -n 1
  pom = push origin master
  pod = push origin develop
  phm = push heroku master
  rs = reset --soft
  rh = reset --hard
  s = status --short
  unstage = reset HEAD
  who = shortlog -s --
  snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  snapshots = !git stash list --grep snapshot
