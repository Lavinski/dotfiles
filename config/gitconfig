[user]
  name = James Ottaway
  email = git@james.ottaway.io
[color]
  ui = true
[github]
  user = jamesottaway
[help]
  autocorrect = 1
[core]
  editor = vim
  pager = diff-highlight | less
  autocrlf = input
  excludesfile = ~/.gitignore
[rebase]
  autosquash = true
[apply]
  whitespace = warn
[push]
  default = current
[alias]
  a = add
  aa = add --all
  ai = add --interactive
  amend = commit --amend
  ap = add --patch
  b = branch
  c = commit
  ca = commit --amend
  cf = commit --fixup
  cm = commit --message
  cl = clone
  co = checkout
  conf = config
  cp = cherry-pick
  d = diff
  dc = diff --cached
  discard = checkout --
  fixup = commit --fixup
  ffs = flow feature start
  ignored = ls-files –others -i –exclude-standard
  l = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset' --abbrev-commit
  l1 = !git l -n 1
  l2 = !git l -n 2
  l3 = !git l -n 3
  l4 = !git l -n 4
  l5 = !git l -n 5
  l10 = !git l -n 10
  l15 = !git l -n 15
  l20 = !git l -n 20
  l25 = !git l -n 25
  latest = log -n 1
  mod = merge origin/develop
  patch = add --patch
  pom = push origin master
  pod = push origin develop
  phm = push heroku master
  ready = rebase --interactive @{upstream}
  rbi = !git rebase --interactive `git merge-base HEAD develop`
  rd = rebase develop
  rod = rebase origin/develop
  rs = reset --soft
  rh = reset --hard
  rhu = reset --hard @{upstream}
  s = status --short
  uncommit = reset --soft HEAD^
  unstage = reset HEAD
  who = shortlog -s -n --no-merges --
  snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  snapshots = !git stash list --grep snapshot
  standup = shortlog --since yesterday
  today = shortlog --since midnight
  wip = commit --all --message 'WIP'
  wipe = reset --hard HEAD
