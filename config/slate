# Highlevel configuration options

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Abstract positions for later use within configuration.

alias full move screenOriginX+(screenSizeX/10);screenOriginY+(screenSizeY/10) screenSizeX/10*8;screenSizeY/10*8
alias left move screenOriginX;screenOriginY screenSizeX/4*3;screenSizeY
alias right move screenOriginX+screenSizeX/4*1;screenOriginY screenSizeX/4*3;screenSizeY
alias top move screenOriginX;screenOriginY screenSizeX;screenSizeY/4*3
alias bottom move screenOriginX;screenOriginY+screenSizeY/4*1 screenSizeX;screenSizeY/4*3
alias topleft corner top-left resize:screenSizeX/4*3;screenSizeY/4*3
alias topright corner top-right resize:screenSizeX/4*3;screenSizeY/4*3
alias bottomleft corner bottom-left resize:screenSizeX/4*3;screenSizeY/4*3
alias bottomright corner bottom-right resize:screenSizeX/4*3;screenSizeY/4*3

# Simple bindings for window positions
# u i o
# j k l
# m , .

alias hyper ctrl;alt;cmd

bind u:${hyper} ${topleft}
bind j:${hyper} ${left}
bind m:${hyper} ${bottomleft}

bind i:${hyper} ${top}
bind k:${hyper} ${full}
bind ,:${hyper} ${bottom}

bind o:${hyper} ${topright}
bind l:${hyper} ${right}
bind .:${hyper} ${bottomright}

bind r:${hyper} relaunch

bind 1:${hyper} throw 0 resize
bind 2:${hyper} throw 1 resize

bind right:${hyper} nudge +10% +0
bind left:${hyper} nudge -10% +0
bind up:${hyper} nudge +0 -10%
bind down:${hyper} nudge +0 +10%
